{
    "name": "template-npm-package",
    "version": "0.0.0-development",
    "description": "A template repository to get quickly setup to create new NPM template-npm-packages.",
    "author": {
        "name": "officialk",
        "email": "karthik@officialk.dev"
    },
    "license": "ISC",
    "keywords": [],
    "homepage": "npm.officialk.dev/template-npm-package",
    "repository": {
        "type": "git",
        "url": "https://github.com/officialk/template-npm-package/"
    },
    "bugs": {
        "url": "https://github.com/officialk/template-npm-package/issues/new"
    },
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "exports": {
        ".": {
            "require": {
                "types": "./dist/types/index.d.ts",
                "default": "./dist/index.js"
            }
        }
    },
    "files": [
        "dist/**/*"
    ],
    "bin": "./dist/index.js",
    "scripts": {
        "//dev": "echo 'commands used in development'",
        "start": "node ./dist/index.ts",
        "start:dev": "nodemon ./src/index.ts",
        "start:docs": "yarn build:docs && yarn start:server",
        "start:server": "http-server docs -d false -o /index.html --no-dotfiles -e html --cors -i false -p 9876",
        "//fixes": "echo 'commands to fix the problems before checking for them'",
        "format": "prettier --ignore-unknown --write ./",
        "lint": "eslint --fix ./src/**/*",
        "fortify": "snyk fix",
        "fix:audit": "yarn audit fix --groups 'dependencies' --force",
        "//builds": "echo 'update the codebase to either format,lint or build'",
        "build": "yarn build:dist && yarn build:docs && yarn build:minify",
        "build:dist": "rimraf dist && tsc",
        "build:docs": "rimraf docs && jsdoc -c jsdoc.json",
        "build:minify": "minify-all-js ./dist -j -M -m",
        "//checks": "echo 'run checks to ensure QA and working'",
        "check:format": "prettier --check ./",
        "check:quality": "eslint --output-file QA/index.html --format html",
        "check:test": "jest --passWithNoTests",
        "check:coverage": "jest --passWithNoTests --coverage",
        "check:vunerability": "snyk code test --severity-level=low --all-projects ./src",
        "check:license": "snyk test",
        "check:audit": "yarn audit --groups 'dependencies' && snyk monitor",
        "check:safety": "yarn check:audit && yarn check:vunerability",
        "//misc": "echo 'Other commands used in the backend of development'",
        "prepare": "husky install && git config --local core.hooksPath .husky",
        "commit": "git-cz",
        "lint-staged": "lint-staged -c .lintstagedrc"
    },
    "dependencies": {},
    "devDependencies": {
        "jest": "^29.3.1",
        "husky": "^8.0.3",
        "jsdoc": "^4.0.0",
        "rimraf": "^3.0.2",
        "dotenv": "^16.0.3",
        "eslint": "^8.29.0",
        "ts-node": "^10.9.1",
        "taffydb": "^2.7.3",
        "nodemon": "^2.0.20",
        "prettier": "2.8.1",
        "commitizen": "^4.2.6",
        "typescript": "^4.9.4",
        "better-docs": "^2.7.2",
        "@types/jest": "^29.2.5",
        "lint-staged": "^13.1.0",
        "http-server": "^14.1.1",
        "minify-all-js": "^0.1.9",
        "@commitlint/cli": "^17.4.2",
        "eslint-config-node": "^4.1.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jsdoc-plugin-typescript": "^2.2.0",
        "cz-conventional-changelog": "^3.3.0",
        "@typescript-eslint/parser": "^5.48.1",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-airbnb-typescript": "^17.0.0",
        "@commitlint/config-conventional": "^17.4.2",
        "@typescript-eslint/eslint-plugin": "^5.48.1"
    },
    "resolutions": {}
}
