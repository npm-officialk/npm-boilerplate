{
    "plugins": ["node_modules/better-docs/typescript"],
    "recurseDepth": 10,
    "source": {
        "include": ["./src"],
        "includePattern": "\\.(jsx|js|ts|tsx)$"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "search": true,
        "better-docs": {
            "name": "__PACKAGE_NAME__ Documentation",
            "title": "__PACKAGE_NAME__",
            "hideGenerator": true,
            "navLinks": [
                {
                    "label": "Github",
                    "href": "https://github.com/__GITHUB_USER__/__REPO__"
                },
                {
                    "label": "NPM",
                    "href": "https://www.npmjs.com/~__NPM_USERNAME__"
                }
            ]
        }
    },
    "opts": {
        "template": "node_modules/better-docs",
        "destination": "./docs/",
        "readme": "README.md",
        "recurse": true
    }
}
